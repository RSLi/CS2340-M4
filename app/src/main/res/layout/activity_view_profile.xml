<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">


    <TextView
        android:text="@string/all_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_profile_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignStart="@+id/field_profile_email" />

    <TextView
        android:text="@string/all_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_profile_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/field_profile_address" />

    <Button
        android:text="@string/all_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/btn_goto_Edit"
        android:layout_below="@+id/textView15"
        android:background="#A0FFFFFF"
        android:layout_alignEnd="@+id/textView15" />

    <TextView
        android:text="@string/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="@string/profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/field_profile_address"
        android:layout_alignBottom="@+id/field_profile_address"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="@string/all_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_profile_address"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/field_profile_email"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="40dp"
        android:layout_alignBaseline="@+id/field_profile_email"
        android:layout_alignBottom="@+id/field_profile_email"
        android:layout_alignParentStart="true" />

</RelativeLayout>