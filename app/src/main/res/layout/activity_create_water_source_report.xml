<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/all_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_source_submit"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="12dp"
        android:text="@string/create_water_purity_report_title_1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/create_watter_source_report_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/textView28"
        android:layout_alignStart="@+id/textView28"/>

    <TextView
        android:text="@string/all_report_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/edit_longitude"
        android:layout_alignStart="@+id/textView38" />

    <TextView
        android:text="@string/all_reporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/textView32"
        android:layout_alignStart="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_source_reporter"
        android:layout_alignBaseline="@+id/textView37"
        android:layout_alignBottom="@+id/textView37"
        android:layout_alignStart="@+id/field_source_num"
        android:text="@string/all_placeholder_name" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/field_source_num"
        android:text="@string/all_placeholder_num"
        android:layout_alignBaseline="@+id/textView32"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignStart="@+id/edit_longitude"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_date_time"
        android:text="@string/all_date_time"
        android:layout_alignBaseline="@+id/textView40"
        android:layout_alignBottom="@+id/textView40"
        android:layout_alignStart="@+id/edit_longitude" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_water_type"
        android:layout_alignTop="@+id/textView41"
        android:layout_alignStart="@+id/field_date_time" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_condition"
        android:layout_below="@+id/textView41"
        android:layout_alignStart="@+id/spinner_water_type" />

    <TextView
        android:text="@string/create_water_purity_report_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView42"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/btn_source_submit"
        android:layout_alignStart="@+id/textView41" />

    <Button
        android:text="@string/all_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_source_cancel"
        tools:text="Cancel"
        android:layout_alignBaseline="@+id/btn_source_submit"
        android:layout_alignBottom="@+id/btn_source_submit"
        android:layout_alignEnd="@+id/edit_longitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/edit_longitude"
        android:labelFor="@+id/edit_longitude"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/textView38"
        android:layout_alignBottom="@+id/textView38"
        android:layout_toEndOf="@+id/btn_source_submit" />

    <TextView
        android:text="@string/create_water_source_report_water_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView41"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/textView42"
        android:layout_alignStart="@+id/textView40" />

    <TextView
        android:text="@string/all_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView40"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/textView41"
        android:layout_toStartOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView40"
        android:layout_alignStart="@+id/textView40"
        android:layout_marginBottom="55dp"
        android:text="@string/all_longitude" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView38"
        android:layout_centerVertical="true"
        android:text="@string/all_latitude" />

    <EditText
        android:id="@+id/edit_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:labelFor="@+id/edit_latitude"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignStart="@+id/edit_longitude" />

</RelativeLayout>