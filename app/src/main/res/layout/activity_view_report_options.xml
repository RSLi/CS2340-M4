<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Report List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/btn_report_list" />

    <Button
        android:text="Water Availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_water_availability"
        android:layout_below="@+id/btn_report_list"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Historical Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_historical_report"
        android:layout_below="@+id/btn_water_availability"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="View Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/textView23"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>