<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_purity_report_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_source_report_list"
        android:layout_centerHorizontal="true"
        android:text="@string/all_water_purity_report"/>

    <Button
        android:id="@+id/btn_source_report_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="@string/all_water_source_report"/>

    <Button
        android:id="@+id/btn_water_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_purity_report_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/all_water_availability_map"/>

    <Button
        android:text="@string/all_historical_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_historical_report"
        android:layout_below="@+id/btn_water_availability"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/all_view_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/textView23"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>