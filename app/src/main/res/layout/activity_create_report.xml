<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/create_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/create_report_btn_water_source_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/btn_create_water_source_report" />

    <Button
        android:text="@string/create_report_btn_water_purity_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_create_water_purity_report"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/btn_create_water_source_report"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/all_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_cancel"
        android:layout_below="@+id/btn_create_water_purity_report"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        tools:text="Cancel" />

</RelativeLayout>