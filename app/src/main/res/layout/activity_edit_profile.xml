<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m4.Controllers.EditProfileActivity">

    <EditText
        android:id="@+id/field_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/field_profile_title"
        android:labelFor="@+id/field_profile_email"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/field_profile_title"
        android:ems="10"
        android:inputType="textWebEmailAddress" />

    <Button
        android:text="Save Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_profile"
        android:layout_alignBaseline="@+id/btn_cancel_edit"
        android:layout_alignBottom="@+id/btn_cancel_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/field_profile_title"
        android:labelFor="@+id/field_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/field_profile_address"
        android:layout_alignLeft="@+id/field_profile_address"
        android:layout_alignStart="@+id/field_profile_address"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel_edit"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />

    <EditText
        android:id="@+id/field_profile_address"
        android:labelFor="@+id/field_profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_save_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="none" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/field_profile_email"
        android:layout_alignBottom="@+id/field_profile_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Email:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView33"
        android:layout_alignTop="@+id/field_profile_title"
        android:layout_marginTop="12dp"
        android:text="Title:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/field_profile_address"
        android:layout_alignBottom="@+id/field_profile_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Address:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
</RelativeLayout>
